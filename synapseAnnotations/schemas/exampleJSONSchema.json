{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$id": "http://example.com/exampleJSONSchema",
   "title": "exampleJSONSchema",
   "type": "object",
   "properties": {
      "fileFormat": {
         "enum": [
            "fastq",
            "txt"
         ]
      },
      "resourceType": {
         "enum": [
            "tool",
            "experimentalData"
         ]
      }
   },
   "required": [
      "resourceType",
      "fileFormat"
   ],
   "allOf": [
      {
         "if": {
            "properties": {
               "resourceType": {
                  "enum": [
                     "tool"
                  ]
               }
            },
            "required": [
               "resourceType"
            ]
         },
         "then": {
            "required": [
               "softwareName"
            ]
         }
      },
      {
         "if": {
            "properties": {
               "resourceType": {
                  "enum": [
                     "experimentalData"
                  ]
               }
            },
            "required": [
               "resourceType"
            ]
         },
         "then": {
            "required": [
               "specimenID",
               "assay"
            ]
         }
      }
   ]
}